{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
		"plugin:flowtype/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "classes": true,
            "jsx": true,
            "impliedStrict": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
		"node": true
    },
    "plugins": [
		"flowtype",
        "react"
    ],
	"settings": {
		"flowtype": {
			"onlyFilesWithFlowAnnotation": false
		}
	},
    "rules": {
        "no-irregular-whitespace": 2,
        "no-unused-vars": 2,
        "no-negated-condition": 2,
        "no-use-before-define": 2,
        "no-console": 0,
        "react/jsx-uses-vars": 2,
        "react/prefer-es6-class": 2,
        "array-bracket-spacing": [
            "error", "always", {
                "singleValue": false,
                "objectsInArrays": false,
                "arraysInArrays": false
            }
        ],
        "eol-last": 2,
        "no-unneeded-ternary": 2,
        "prefer-const": 2,
        "no-var": 2,
        "object-shorthand": 2,
        "prefer-rest-params": 2,
        "no-multi-spaces": 2,
        "no-trailing-spaces": 2,
        "no-useless-concat": 2,
        "dot-notation": 2
    }
}
