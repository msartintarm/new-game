{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "classes": true,
            "jsx": true,
            "impliedStrict": true
        }
    },
    "env": {
        "es6": true,
        "browser": true
    },  
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": 2,
        "no-console": 0,
        "no-undef": 1,
        "react/jsx-uses-vars": 2,
        "react/prefer-es6-class": 2,
        "react/react-in-jsx-scope": 0,
        "react/prop-types": 0
    }
}
